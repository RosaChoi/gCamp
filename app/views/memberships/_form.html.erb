<%= form_for [@project, @membership], html:{class: "text-center"} do |f| %>
  <% if alert %>
    <div class="alert alert-danger">
      <div id="error_explanation">
        <h4><%= pluralize(alert.count, "error") %> prohibited this form from being saved:</h4>
        <ul class="list-unstyled">
          <% alert.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.collection_select :user_id, (User.all - @project.users), :id, :full_name, {include_blank: "Please select a user..."}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.select :role, ["member", "owner"], {include_blank: false}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.submit "Add New Member", class: "btn btn-primary" %>
  </div>
<% end %>
