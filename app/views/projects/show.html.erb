<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_project_path(@project), id: "edit-project-action", class: "btn btn-info" %>
    <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy-project-action", class:"btn btn-danger" %>
  </div>
  <h1><%= @project.name %></h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", project_path %></li>
  <li class="active"><%= @project.name %></li>
</ol>

<p>
  <%= link_to "#{pluralize(@project.tasks.count, "Task")}", project_tasks_path(@project) %>
</p>
<p>
  <%= link_to "#{pluralize(@project.memberships.count, "Members")}", project_memberships_path(@project) %>
</p>
