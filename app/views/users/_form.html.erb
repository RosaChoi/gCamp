<%= form_for(@user, html:{class:"form-horizontal", role:"form"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2"%>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control", id: "first-name-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2"%>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control", id: "last-name-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-md-2" %>
    <div class="col-md-4">
      <%= f.email_field :email, class: "form-control", id: "email-field" %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit class: "btn btn-primary", id: "submit-user" %>
      <%= link_to 'cancel', users_path, class:"btn btn-default" %>
    </div>
  </div>
  <% if params[:action] == "edit" %>
    <div class="form-group actions">
      <div class="col-sm-offset-2 col-sm-4">
        <div class="well text-center">
          <%= link_to 'Delete User', @user, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>






<% end %>
