<div id="main-gcamp" class="jumbotron">
  <h1>gCamp</h1>
  <h3>Your life, organized.</h3>
</div>

<div class="row">
  <div class="col-md-4">
    <%= image_tag 'edu02.jpg', :class=>"img-responsive" %>
  </div>
  <div class="col-md-4 center">
    <%= image_tag 'edu03.jpg', :class=>"img-responsive" %>
  </div>
  <div class="col-md-4 center">
    <%= image_tag 'edu01.jpg', :class=>"img-responsive" %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Tasks</h3>
      </div>
      <div class="panel-body">
        Grouped by projects and lists. Just the way you like'em.
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Documents</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li>Upload</li>
          <li>Comment</li>
          <li>Revise</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Comments</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li>Comment on tasks and documents</li>
          <li>Get email notification</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<ul class="list-unstyled">
  <% @quotes.each do |quote| %>
  <li><strong>"<%= quote.quote %>"</strong></li>
  <li><em class="text-muted"><%= "-#{quote.author}" %></em></li>
  <br>
  <% end %>
</ul>
